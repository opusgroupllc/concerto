<h1>Current Candidates</h1>

<div class="table-responsive">
<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Status</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Github url</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= link_to 'Details', candidate, class: "btn btn-success btn-xs" %></td>
        <td><%= candidate.aasm.current_state %></td>
        <td><%= candidate.first_name %></td>
        <td><%= candidate.last_name %></td>
        <td><%= candidate.phone_number %></td>
        <td><%= link_to candidate.github_url, candidate.github_url %></td>
        <td><%= link_to "Download Resume", candidate.resume.url %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate), class: "btn btn-warning btn-xs" %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Candidate', new_candidate_path, class: "btn btn-default" %>
