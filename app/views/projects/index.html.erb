<p id="notice"><%= notice %></p>

<h1>Opus Projects</h1>

<div class="table-responsive">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Point of contact</th>
      <th>Poc email</th>
      <th>Client</th>
      <th>Location</th>
      <th>Positions</th>
      <th>Candidates</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.point_of_contact %></td>
        <td><%= project.poc_email %></td>
        <td><%= project.client %></td>
        <td><%= project.location %></td>
        <td><%= project.position_count %></td>
        <td><%= Project.count %></td>
        <td><%= link_to 'Details', project %></td>
        <td><%= link_to 'Updates', edit_project_path(project) %></td>
        <td><%= link_to 'Archive', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

